{% extends 'master.jinja2' %}
{% load static %}

{% block content %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Inclure Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css"> <!-- Inclure jQuery UI -->

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s ease;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover td {
            background-color: #f5f5f5;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .hidden {
            display: none;
        }

        .search-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-input {
            width: calc(100% - 40px);
            max-width: 350px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
        }

        .search-input:focus {
            border-color: #007bff;
            outline: none;
        }

        .calendar-icon { 
            margin-left: 10px;
            cursor: pointer;
        }

        .quantity-input {
            width: 80px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            font-size: 16px;
        }

        .btn-validate {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-validate:hover {
            background-color: #0056b3;
        }

        .no-results {
            font-style: italic;
            color: #d9534f;
            text-align: center;
            margin-top: 10px;
            display: none;
        }
    </style>

    <h1>Données de Mcl</h1>

    <div class="search-container">
        <input type="text" id="searchInputCode" placeholder="Rechercher par code ISIN..." class="search-input" onkeyup="searchTable('code')">
        <input type="text" id="searchInputNom" placeholder="Rechercher par nom d'émetteur..." class="search-input" onkeyup="searchTable('nom')">
        <i class="fas fa-calendar-alt calendar-icon" onclick="showDatePicker()"></i>
        <button onclick="validateSelection()" class="btn-validate">Valider</button>
    </div>

    <div class="table-responsive">
        <table id="dataTable">
            <thead>
                <tr>
                    <th>Sélectionner</th>
                    <th>Code ISIN</th>
                    <th>Nom émetteur</th>
                    <th>Famille instrument</th>
                    <th>Quantité émise</th>
                    <th>Ajouter quantité</th>
                </tr>
            </thead>
            <tbody>
                {% for item in data %}
                <tr>
                    <td><input type="checkbox" name="select" value="{{ item.code_isin }}"></td>
                    <td>{{ item.code_isin }}</td>
                    <td>{{ item.nom_emetteur }}</td>
                    <td>{{ item.famille_instrument }}</td>
                    <td>{{ item.qt_emise }}</td>
                    <td><input type="number" name="quantity" class="quantity-input"></td>
                </tr>
                {% endfor %}
            </tbody>
            
        </table>
    </div>
    
    <p class="no-results">Aucun titre trouvé</p>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

    <script>
        function searchTable(column) {
            var input, filter, table, tr, td, i, txtValue;
            if (column === 'code') {
                input = document.getElementById("searchInputCode");
            } else if (column === 'nom') {
                input = document.getElementById("searchInputNom");
            } else if (column === 'date_echeance') {
                input = document.getElementById("searchInputDateEcheance");
            }
            filter = input.value.toUpperCase();
            table = document.getElementById("dataTable");
            tr = table.getElementsByTagName("tr");

            var found = false;
            var anyFilter = filter.length > 0;

            for (i = 0; i < tr.length; i++) {
                if (column === 'code') {
                    td = tr[i].getElementsByTagName("td")[0];
                } else if (column === 'nom') {
                    td = tr[i].getElementsByTagName("td")[1];
                } else if (column === 'date_echeance') {
                    td = tr[i].getElementsByTagName("td")[8];
                }
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (column !== 'date_echeance') {
                        if (txtValue.toUpperCase().indexOf(filter) > -1) {
                            tr[i].classList.remove("hidden");
                            found = true;
                        } else {
                            tr[i].classList.add("hidden");
                        }
                    } else {
                        if (filter === '') { // Si le filtre est vide, afficher toutes les lignes
                            tr[i].classList.remove("hidden");
                            found = true;
                        } else {
                            if (txtValue === filter) {
                                tr[i].classList.remove("hidden");
                                found = true;
                            } else {
                                tr[i].classList.add("hidden");
                            }
                        }
                    }
                }
            }

            var noResultsMessage = document.querySelector(".no-results");
            if (!found && anyFilter) {
                noResultsMessage.style.display = "block";
            } else {
                noResultsMessage.style.display = "none";
            }
        }

        function showDatePicker() {
            $("#searchInputDateEcheance").datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                onSelect: function(dateText, inst) {
                    var year = inst.selectedYear;
                    var month = inst.selectedMonth;
                    $(this).datepicker('setDate', new Date(year, month, $(this).datepicker('getDate').getDate()));
                    searchTable('date_echeance');
                }
            }).datepicker("show");
        }

        function validateSelection() {
            var checkboxes = document.querySelectorAll('input[name="select"]:checked');
            var quantities = document.querySelectorAll('input[name="quantity"]');
            var selectedCodes = [];
            var selectedQuantities = [];
            checkboxes.forEach(function(checkbox) {
                selectedCodes.push(checkbox.value);
            });
            quantities.forEach(function(quantityInput) {
                selectedQuantities.push(quantityInput.value);
            });
            // Envoyer les données au serveur ou traiter localement
            console.log("Codes sélectionnés :", selectedCodes);
            console.log("Quantités ajoutées :", selectedQuantities);
        }
    </script>
{% endblock %}
